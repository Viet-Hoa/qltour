                @Html.DropDownList("IDTOUR", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDTOUR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })
